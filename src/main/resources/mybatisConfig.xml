<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias alias="Integer" type="java.lang.Integer" />
        <typeAlias alias="Long" type="java.lang.Long" />
        <typeAlias alias="HashMap" type="java.util.HashMap" />
        <typeAlias alias="LinkedHashMap" type="java.util.LinkedHashMap" />
        <typeAlias alias="ArrayList" type="java.util.ArrayList" />
        <typeAlias alias="LinkedList" type="java.util.LinkedList" />
        <typeAlias alias="User" type="com.tencent.memory.model.User" />
        <typeAlias alias="Comment" type="com.tencent.memory.model.Comment" />
        <typeAlias alias="Gallery" type="com.tencent.memory.model.Gallery" />
        <typeAlias alias="Image" type="com.tencent.memory.model.Image" />
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.jdbc.Driver"/>
                <property name="url" value="jdbc:mysql://101.132.43.60:3306/memory?characterEncoding=UTF8"/>
                <property name="username" value="test"/>
                <property name="password" value="justice"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <!--这个设置只要在这儿设置或者在application.properties 里面设置 mybatis.mapper-locations -->
